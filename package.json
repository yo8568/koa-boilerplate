{
  "name": "koa-boilerplate",
  "version": "0.0.0",
  "description": "A Koa v2 boilerplate for building restful API and view engine.",
  "main": "index.js",
  "scripts": {
    "start": "npm run prod",
    "build": "babel src -d dist --copy-files",
    "build:clean": "rimraf dist static/dist",
    "prod": "cross-env NODE_ENV=production node bin/server.js",
    "dev": "cross-env NODE_ENV=development nodemon bin/server.js",
    "test": "cross-env NODE_ENV=test jest --config .jestrc --forceExit",
    "test:watch": "npm test -- --watch",
    "test:coverage": "npm test -- --coverage",
    "lint": "eslint src"
  },
  "keywords": [
    "koa2",
    "api",
    "view",
    "mvc"
  ],
  "author": "kenny",
  "license": "MIT",
  "dependencies": {
    "api-query-params": "^4.5.1",
    "bunyan": "^1.8.12",
    "commander": "^2.13.0",
    "dotenv": "^5.0.0",
    "kcors": "^2.2.1",
    "koa": "^2.4.1",
    "koa-bodyparser": "^4.2.0",
    "koa-compress": "^2.0.0",
    "koa-context-validator": "^0.3.0",
    "koa-convert": "^1.2.0",
    "koa-helmet": "^3.1.0",
    "koa-json": "^2.0.2",
    "koa-json-error": "^3.1.2",
    "koa-logger": "^3.1.0",
    "koa-onerror": "^4.0.0",
    "koa-router": "^7.4.0",
    "koa-session": "^5.8.1",
    "koa-static": "^4.0.2",
    "koa-views": "^6.1.3",
    "lodash": "^4.17.4",
    "mongoose": "^5.0.3",
    "mongoose-delete": "^0.4.0",
    "mongoose-hidden": "^1.5.2",
    "mongoose-paginate": "^5.0.3",
    "nunjucks": "^3.0.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.26.0",
    "cross-env": "^5.1.3",
    "eslint": "^3.15.0",
    "eslint-config-standard": "^6.2.1",
    "eslint-plugin-standard": "^2.0.1",
    "jest": "^22.1.4",
    "nodemon": "^1.14.12",
    "rimraf": "^2.5.4"
  }
}
